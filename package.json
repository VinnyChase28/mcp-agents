{
  "name": "mcp-agents",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=\"./apps/web\" --filter=\"./apps/api\"",
    "dev:all": "turbo dev --filter=\"./apps/*\" --filter=\"./servers/*\"",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean",
    "typecheck": "turbo typecheck",
    "generate-paths": "node scripts/generate-path-mappings.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "eslint": "^9.9.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "turbo": "^2.3.3",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.0.0",
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write"
    ],
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  }
}
