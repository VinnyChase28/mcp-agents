{
  "name": "mcp-agents",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "mcp:build": "turbo run build --filter='./servers/*'",
    "mcp:dev": "turbo run dev --filter='./servers/*'",
    "dev:all": "./dev.sh",
    "dev:web": "./dev-web.sh",
    "dev:api": "turbo run dev --filter @mcp-agents/api",
    "dev:frontend": "turbo run dev --filter @mcp-agents/web",
    "build:packages": "turbo run build --filter='./packages/*'",
    "start:web": "pnpm dev:web",
    "generate-paths": "node scripts/generate-path-mappings.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.0.0"
}
