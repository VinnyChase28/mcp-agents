{
  "name": "mcp-agents",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.1.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "pnpm --filter=@mcp-agents/web dev",
    "dev:web": "turbo dev --filter=\"./apps/web\" --filter=\"./apps/api\"",
    "dev:all": "turbo dev --filter=\"./apps/*\" --filter=\"./servers/*\"",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean",
    "typecheck": "turbo build",
    "generate-paths": "node scripts/generate-path-mappings.js",
    "test": "vitest",
    "test:integration": "start-server-and-test 'pnpm --filter=@mcp-agents/web start:test' http://localhost:3000 'vitest run'",
    "test:coverage": "vitest run --coverage",
    "mcp": "node scripts/dev-mcp.js",
    "mcp:restart": "node scripts/dev-mcp.js restart all",
    "mcp:math": "node scripts/dev-mcp.js restart math",
    "mcp:file": "node scripts/dev-mcp.js restart file-manager",
    "mcp:api": "node scripts/dev-mcp.js restart api-client",
    "mcp:perplexity": "node scripts/dev-mcp.js restart perplexity"
  },
  "devDependencies": {
    "@types/node": "^20.19.1",
    "@vitest/ui": "^3.2.4",
    "dotenv": "^16.5.0",
    "eslint": "^9.9.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "pnpm": "^9.1.1",
    "prettier": "^3.5.3",
    "start-server-and-test": "^2.0.12",
    "turbo": "^2.3.3",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --fix",
    "*.{json,md,css}": "prettier --write"
  }
}
