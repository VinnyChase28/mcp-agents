{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/mcp-agents/config": [
        "../../packages/config/dist/index"
      ],
      "@/mcp-agents/config/*": [
        "../../packages/config/src/*"
      ],
      "@/mcp-agents/shared-types": [
        "../../packages/shared-types/dist/index"
      ],
      "@/mcp-agents/shared-types/*": [
        "../../packages/shared-types/src/*"
      ],
      "@/mcp-agents/utils": [
        "../../packages/utils/dist/index"
      ],
      "@/mcp-agents/utils/*": [
        "../../packages/utils/src/*"
      ],
      "@/mcp-agents/api": [
        "../../apps/api/src/index"
      ],
      "@/mcp-agents/api/*": [
        "../../apps/api/src/*"
      ],
      "@/mcp-agents/web": [
        "../../apps/web/src/index"
      ],
      "@/mcp-agents/web/*": [
        "../../apps/web/src/*"
      ],
      "@/mcp-agents/api-client-mcp": [
        "../../servers/api-client-mcp/src/index"
      ],
      "@/mcp-agents/api-client-mcp/*": [
        "../../servers/api-client-mcp/src/*"
      ],
      "@/mcp-agents/calculator-mcp": [
        "../../servers/calculator-mcp/src/index"
      ],
      "@/mcp-agents/calculator-mcp/*": [
        "../../servers/calculator-mcp/src/*"
      ],
      "@/mcp-agents/file-manager-mcp": [
        "../../servers/file-manager-mcp/src/index"
      ],
      "@/mcp-agents/file-manager-mcp/*": [
        "../../servers/file-manager-mcp/src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
